{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "google"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "jest": true
  },
  "overrides": [{
    "files": [
      "**/*.spec.ts",
      "**/*.spec.tsx"
    ],
    "env": {
      "jest": true
    }
  }],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "rules": {
    "comma-dangle": "off",
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "linebreak-style": "off",
    "max-len": ["error", {
      "code": 95,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
      "ignoreUrls": true
    }],
    "new-cap": ["error", {
      "capIsNew": false
    }],
    "no-array-constructor": "off",
    "no-unused-vars": "off",
    "object-curly-spacing": "off",
    "operator-linebreak": ["error", "after", {
      "overrides": {
        "?": "before",
        ":": "before"
      }
    }],
    "quotes": "warn",
    "require-jsdoc": "off",
    "semi": "off",
    "spaced-comment": ["error", "always", {
      "block": {
        "markers": ["!"],
        "balanced": true
      },
      "line": {
        "markers": ["/"]
      }
    }]
  },
  "settings": {
    "react": {
      "version": "latest"
    }
  }
}
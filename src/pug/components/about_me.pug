#about.component
	.container
		.section-title.text-center.center
			h2(data-i18n="business-card-about-me-title")
			hr
		.row.d-flex.justify-content-center
			.col-md-12.text-center
				img.img-thumbnail(src="assets/images/about_me.jpg" alt="About me")
			.col-md-8.col-md-offset-2.text-center
				.about-text
					p(data-i18n="business-card-about-me-general-title")
					- var n_general = 1
					ul.list-unstyled
						while n_general < 7
							li(data-i18n="business-card-about-me-general-list-item-" + n_general++)
					p(data-i18n="business-card-about-me-experience-title")
					- var n_experience = 1
					ul.list-unstyled
						while n_experience < 7
							li(data-i18n="business-card-about-me-experience-list-item-" + n_experience++)
					p#resume.text-center(data-i18n="business-card-about-me-download-resume")
					a.btn.btn-primary.btn-lg.mr-1(href="assets/files/yf-cv.pdf" target="_blank")
						i.fas.fa-file-pdf
					a.btn.btn-primary.btn-lg(href="https://drive.google.com/open?id=1RPKIdkOwcD_A4P0ZWQGrlFt5-abcN6-3CBJ7WvM8mc8" target="_blank")
						i.fas.fa-file-word
